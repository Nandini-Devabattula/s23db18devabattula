extends layout

block content

  - let soapss = results
  h1= title
  - let create = `dispatch(\"/soaps/create\")`
  button.btn( class="btn-info", onclick= create) Add new soaps
  div(class="container-fluid")
  div(class="row m-1")
    each soaps in soapss
      - let destination = `dispatch(\"/soaps/update?id=${soaps._id}\")`
      - let detail = `dispatch(\"/soaps/detail/?id=${soaps._id}")`
      - let deletesoaps = `dispatch(\"/soaps/delete/?id=${soaps._id}")`      
      div(class="row-sm-2", class="m-1") soaps #{soaps.Soap_Name} (#{soaps.Soap_cost}) is #{soaps.Soap_Color}
        button.btn( class="btn-primary ml-1", onclick= destination) Update
        button.btn( class="btn-success", onclick= detail) Details
        button.btn( class="btn-dark", onclick= deletesoaps) Delete

  script.
    function dispatch(path){
      window.location.href=path
    }


